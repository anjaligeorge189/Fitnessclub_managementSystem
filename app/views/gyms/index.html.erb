<div
    class="p-6 text-center bg-image"
    style="
      background-image: url('https://images.unsplash.com/photo-1574406280735-351fc1a7c5e0?ixid=MXwxMjA3fDB8MHxzZWFyY2h8OTl8fGZpdG5lc3N8ZW58MHx8MHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60');
       background-repeat: no-repeat;
  background-size: contain,cover;

      height: 1500px;
      width: : 1500px;
    " >
<p id="notice"><%= notice %></p>

<h1>Gyms</h1>

<table>
  <thead>
    <tr>
      <th>Package id</th>
      <th>Package name</th>
      <th>Duration</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gyms.each do |gym| %>
      <tr>
        <td><%= gym.package_ID %></td>
        <td><%= gym.package_name %></td>
        <td><%= gym.duration %></td>
        <td><%= gym.price %></td>
        <td><%= link_to 'Show', gym %></td>
        <td><%= link_to 'Edit', edit_gym_path(gym) %></td>
        <td><%= link_to 'Destroy', gym, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

